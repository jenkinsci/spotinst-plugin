<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form">
    <div class="alert alert-danger">
        <strong>${%Critical.Title}</strong>
        <p/>
        <j:if test="${it.isSpotinstCloudsCommunicationFailuresExist()}">
            ${%CGroupsDoesNotManageByController(it.spotinstCloudsCommunicationFailures)}
            <p/>

            ${%Explanation(rootURL)}
            <p/>
        </j:if>

        <j:if test="${it.isSpotinstCloudsCommunicationInitializingExist()}">
            ${%GroupsOfInitializingClouds(it.spotinstCloudsCommunicationInitializing)}
            <p/>
        </j:if>

        <j:if test="${it.isSpotinstCloudsCommunicationReadyExist()}">
            ${%GroupsOfSuccessfulInitializingClouds(it.spotinstCloudsCommunicationReady)}
            <p/>
        </j:if>

        <p/>
        <p/>
    </div>
</j:jelly>
